		<!-- Login links -->
		<div class="link">
			<span id="loginbtn"><a href="#login" class="linkstyle">login</a></span>
			<span id="signupbtn"><a href="#signup" class="linkstyle">sign-up</a></span>
		</div>
		
		<!-- The Login Modal -->
		<div id="myModal" class="modal">
		  <div class="modal-content" id="login">
		    <span class="close">&times;</span>
		    <!-- Login form -->
				<form class="loginmodal" method="post" action="/login">
					<label>
						<input type="text" id="userName" name="userName" required />
						<div class="label-text">Username</div>
					</label>
					<label>
				    	<input type="text" id="password" name="password" required />
				    	<div class="label-text">Password</div>
					</label>
					<button id="loginSubmit">Submit</button>
					<hr>
					<p>Login with:</p>
        			<a href="/auth/google" class="btn btn-danger"><span class="fa fa-google-plus"></span> Google</a>
        			<hr>
        			<br>
        			<br>
        			<span style="color:red;font-weight: bolder;"> <%= error %> </span>
				</form>
		    <form action="../main.html"></form>
		  </div>
		</div>

		<!-- The Sign-up Modal -->
		<div id="myModal2" class="modal">
		  <div class="modal-content" id="signup">
		    <span class="close2">&times;</span>
		    <!-- Login form -->
				<form class="loginmodal" method="post" action="/signup">
					<label>
						<input type="text" id="email" name="email" required />
						<div class="label-text">Email</div>
					</label>
					<label>
						<input type="text" id="userName" name="userName"  required />
						<div class="label-text">Username</div>
					</label>
					<label>
				    	<input type="text" id="password" name="password" required />
				    	<div class="label-text">Password</div>
					</label>
					<button id="signupSubmit">Submit</button>
					<hr>
					<p>Login with:</p>
        			<a href="/auth/google" class="btn btn-danger"><span class="fa fa-google-plus"></span> Google</a>
        			<hr>
        			<br>
        			<br>
        			<span style="color:red;font-weight: bolder;"> <%= error %> </span>
				</form>
		    <form action="../main.html"></form>
		  </div>
		</div>
		<!-- End of Wrapper -->
	</div>

	<script>
		//=================================================================
		//Modal setup
		//=================================================================
		// Get the modal
		var modal = document.getElementById('myModal');
		var modal2 = document.getElementById('myModal2');

		// Get the button that opens the modal
		var btn = document.getElementById("loginbtn");
		var btn2 = document.getElementById("signupbtn");

		// Get the <span> element that closes the modal
		var span = document.getElementsByClassName("close")[0];
		var span2 = document.getElementsByClassName("close2")[0];

		// When the user clicks the button, open the modal 
		btn.onclick = function() {
		    modal.style.display = "block";
		}

		btn2.onclick = function() {
		    modal2.style.display = "block";
		}

		// When the user clicks on <span> (x), close the modal
		span.onclick = function() {
		    modal.style.display = "none";
		}

		span2.onclick = function() {
			modal2.style.display = "none";
		}

		// When the user clicks anywhere outside of the modal, close it
		window.onclick = function(event) {
		    if (event.target == modal) {
		        modal.style.display = "none";
		    } else if (event.target == modal2) {
		    	modal2.style.display = "none";
		    }
		}



	</script>
</body>
</html>